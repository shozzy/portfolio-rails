<%= form_with(model: content, local: true) do |form| %>
  <% if content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category ,size: "20"%>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title ,size: "30"%>
  </div>

  <div class="field">
    <%= form.label :when %>
    <%= form.text_field :when ,size: "30"%>
  </div>

  <div class="field">
    <%= form.label :detail %>
    <%= form.text_area :detail ,size: "100x20"%>
  </div>

  <div class="field">
    <%= form.label :tag_list %>
    <%= text_field_tag 'content[tag_list]', @content.tag_list.join(',') ,size: "100"%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
